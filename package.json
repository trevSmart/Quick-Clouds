{
	"name": "qc2",
	"displayName": "QC2",
	"description": "Checks for adherence to coding best practices for Salesforce.",
	"version": "2.3.143",
	"license": "MIT",
	"icon": "resources/logo.png",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Linters",
		"Language Packs"
	],
	"keywords": [
		"Quality",
		"salesforce",
		"Apex",
		"Analysis",
		"Automated code review",
		"Best practice",
		"Static code analysis"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"uriHandler": true
	},
	"contributes": {
		"commands": [
			{
				"command": "qc2.check",
				"category": "QC2",
				"title": "Salesforce Quality Live Check"
			},
			{
				"command": "qc2.deleteLCHistory",
				"category": "QC2",
				"title": "Delete all data"
			},
			{
				"command": "qc2.writeoff",
				"category": "QC2",
				"title": "Request an issue write off"
			},
			{
				"command": "qc2.myIssues",
				"category": "QC2",
				"title": "Quality Center"
			},
			{
				"command": "qc2.validateAPIKey",
				"category": "QC2",
				"title": "Validate QC2 API key"
			},
			{
				"command": "qc2.applyChanges",
				"title": "Apply changes"
			},
			{
				"command": "qc2.discardChanges",
				"title": "Discard changes"
			},
			{
				"command": "qc2.settings",
				"category": "QC2",
				"title": "Open QC2 Settings"
			},
			{
				"command": "qc2.showLogs",
				"category": "QC2",
				"title": "Show QC2 Logs"
			}
		],
		"configuration": {
			"title": "QC2 Configuration",
			"properties": {
				"QC2Configuration.API-key": {
					"type": "string",
					"default": "",
					"description": "QC2 API Key"
				},
				"QC2Configuration.debugMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug mode to simulate write-off requests instead of sending them to the server"
				}
			}
		}
	},
	"scripts": {
		"build:webview": "NODE_OPTIONS=--openssl-legacy-provider npm --prefix ./webview-ui run build:dev",
		"build:webview:prod": "NODE_OPTIONS=--openssl-legacy-provider npm --prefix ./webview-ui run build",
		"vscode:prepublish": "echo 'Skipping compilation for pre-built extension'",
		"compile": "tsc -p ./",
		"lint": "eslint src webview-ui/src media eslint.config.mjs --fix",
		"package": "npm run build:webview && npm version patch --no-git-tag-version && VERSION=$(node -p \"require('./package.json').version\") && vsce package --out dist/qc2-v$VERSION.vsix && code-insiders --install-extension dist/qc2-v$VERSION.vsix",
		"clean builds": "rm -f dist/qc2-*.vsix"
	},
	"devDependencies": {
		"@types/axios": "^0.14.4",
		"@types/node": "^24.3.1",
		"@types/sql.js": "^1.4.9",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"eslint": "^9.35.0",
		"typescript": "^5.9.2"
	},
	"publisher": "QualityClouds",
	"repository": {
		"type": "git",
		"url": "https://github.com/QualityClouds/qc2.git"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.0.1",
		"axios": "^1.12.0",
		"sql.js": "^1.13.0"
	},
	"__metadata": {
		"installedTimestamp": 1752858856436,
		"targetPlatform": "undefined",
		"size": 30087733
	}
}
