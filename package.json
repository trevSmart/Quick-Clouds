{
	"name": "quick-clouds-for-salesforce",
	"displayName": "Quick Clouds for Salesforce",
	"description": "Checks for adherence to coding best practices for Salesforce.",
	"version": "0.2.60",
	"license": "MIT",
	"icon": "resources/logo.webp",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Linters",
		"Language Packs"
	],
	"keywords": [
		"Quality",
		"salesforce",
		"Apex",
		"Analysis",
		"Automated code review",
		"Best practice",
		"Static code analysis",
		"Security",
		"Code quality"
	],
	"activationEvents": [
		"onUri",
		"onLanguage:apex",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:xml",
		"workspaceContains:**/*.cls",
		"workspaceContains:**/*.trigger",
		"workspaceContains:**/*.component",
		"workspaceContains:**/*.page",
		"workspaceContains:**/*.js",
		"workspaceContains:**/*.ts",
		"workspaceContains:**/*.html",
		"workspaceContains:**/*.css",
		"workspaceContains:**/*.xml"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"uriHandler": true
	},
	"contributes": {
		"commands": [
			{
				"command": "quick-clouds.scan",
				"category": "Quick Clouds",
				"title": "Run Quick Clouds scan",
				"icon": "$(code-review)"
			},
			{
				"command": "quick-clouds.deleteLCHistory",
				"category": "Quick Clouds",
				"title": "Clear all issues"
			},
			{
				"command": "quick-clouds.writeoff",
				"category": "Quick Clouds",
				"title": "Request issue write-off"
			},
			{
				"command": "quick-clouds.myIssues",
				"category": "Quick Clouds",
				"title": "Quality Center"
			},
			{
				"command": "quick-clouds.validateAPIKey",
				"category": "Quick Clouds",
				"title": "Validate API key"
			},
			{
				"command": "quick-clouds.applyChanges",
				"title": "Apply changes"
			},
			{
				"command": "quick-clouds.discardChanges",
				"title": "Discard changes"
			},
			{
				"command": "quick-clouds.settings",
				"category": "Quick Clouds",
				"title": "Open Quick Clouds Settings"
			},
			{
				"command": "quick-clouds.showLogs",
				"category": "Quick Clouds",
				"title": "Show Quick Clouds Logs"
			}
		],
		"configuration": {
			"title": "Quick Clouds for Salesforce",
			"properties": {
				"QuickClouds.API-key": {
					"type": "string",
					"default": "",
					"description": "Quick Clouds API Key"
				},
				"QuickClouds.showSettingsButton": {
					"type": "boolean",
					"default": true,
					"description": "Show Quick Clouds settings in the status bar"
				},
				"QuickClouds.showQualityCenterButton": {
					"type": "boolean",
					"default": true,
					"description": "Show Quality Center in the status bar"
				},
				"QuickClouds.debugMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug mode to simulate write-off requests instead of sending them to the server"
				}
			}
		},
		"menus": {
			"editor/title": [
				{
					"command": "quick-clouds.scan",
					"when": "editorTextFocus && (resourceLangId == apex || resourceLangId == javascript || resourceLangId == typescript || resourceLangId == html || resourceLangId == css || resourceLangId == xml)",
					"group": "navigation@100",
					"icon": "$(code-review)"
				}
			]
		}
	},
	"scripts": {
		"compile": "echo 'No compilation needed - using JavaScript source files'",
		"build:webview": "NODE_OPTIONS=--openssl-legacy-provider npm --prefix ./webview-ui run build:dev",
		"build:vsix": "npm run build:webview && NODE_OPTIONS=\"--require ./scripts/vsce-file-polyfill.js\" npx @vscode/vsce package --out quick-clouds-build-check.vsix",
		"package": "./scripts/package.sh",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "vitest run --config vitest.config.ts",
		"test:run": "vitest run --config vitest.config.ts",
		"test:ui": "vitest --ui --config vitest.config.ts",
		"test:coverage": "vitest run --reporter=verbose --config vitest.config.ts",
		"test:watch": "vitest --watch --config vitest.config.ts"
	},
	"devDependencies": {
		"@types/axios": "^0.14.4",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.3.1",
		"@types/sql.js": "^1.4.9",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"@vscode/codicons": "^0.0.36",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"eslint": "^9.35.0",
		"jsdom": "^27.0.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"publisher": "trevSmart",
	"repository": {
		"type": "git",
		"url": "https://github.com/trevSmart/Quick-Clouds.git"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.0.1",
		"axios": "^1.12.0",
		"sql.js": "^1.13.0"
	},
	"__metadata": {
		"installedTimestamp": 1752858856436,
		"targetPlatform": "undefined",
		"size": 30087733
	}
}
