{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "jsdom"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "webview-ui",
    "media",
    "resources",
    "scripts",
    "tmp"
  ]
}
